@model IEnumerable<mVoxApp.Web.Models.Team>
<hr />
<br /><br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.points)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.keyGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.flag)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.keyGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.flag)
            </td>
            <td class="text-right">
                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @Class = "btn btn-default" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.id }, new { @Class = "btn btn-default" }) |
                @Html.ActionLink("Excluir da Tabela", "Delete", new { id = item.id }, new { @Class = "btn btn-default btn-danger" })
            </td>
        </tr>
    }

</table>
