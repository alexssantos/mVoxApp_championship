@model IEnumerable<mVoxApp.Web.Models.Team>
<hr />
<br /><br />

@{
    if (Model.Count() != 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.points)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.keyGroup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.flag)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.points)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.keyGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.flag)
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @Class = "btn btn-default" }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.id }, new { @Class = "btn btn-default" }) |
                        @Html.ActionLink(" Venceu Jogo ", "Details", new { id = item.id }, new { @Class = "btn btn-success" }) |
                        @if (item.keyGroup > 1)
                        {
                             @Html.ActionLink("Excluir da Tabela", "ChangeKeyGroup", new { id = item.id }, new { @Class = "btn btn-default btn-danger" })
                        }
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <h5 class="text-center">Nenhum Time Cadastrado.</h5>
        <br /><br />
    }
}


