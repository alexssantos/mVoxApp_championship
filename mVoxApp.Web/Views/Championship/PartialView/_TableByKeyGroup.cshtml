@model IEnumerable<mVoxApp.Web.Models.TeamModel>
<hr />
<br /><br />

@{
    if (Model.Count() != 0)
    {
        <table class="table">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Name)
                </th>              
                              
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                   
                    <td class="text-right">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @Class = "btn btn-default" }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @Class = "btn btn-default" }) |
                        @Html.ActionLink(" Venceu Jogo ", "WonGame", new { id = item.Id }, new { @Class = "btn btn-success" }) |
                        @if (item.KeyGroup >= 1)
                        {
                             @Html.ActionLink("Desclassificado", "DeleteFromKeyGroup", new { id = item.Id }, new { @Class = "btn btn-default btn-danger" })
                        }
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <h5 class="text-center">Nenhum Time Classificado.</h5>
        <br /><br />
    }
}


